$('.filter-type').on('change click', function(e) {
  e.preventDefault();
  
  const filterType = $(this).data('filter-type')
  if(filterType == 'high'){
    $('.high-low').removeClass('active');
  $(this).addClass('active');
  $('.low-high').removeClass('active');
  }
  else if(filterType == 'low'){
    $('.low-high').removeClass('active');
  $(this).addClass('active');
  $('.high-low').removeClass('active');
  }
  else{
    $('.material-link').removeClass('active');
  $(this).addClass('active');
  
  }
  const material = $(this).data('material');
  console.log(filterType);
  const category_id = $(this).data('category-id')
  //brand name
  // const brand = $(this).data('brand-name')
  const checkedBrands = $('.brand-checkbox:checked').map(function() {
    return $(this).data('brand-name');
  }).get()
  console.log(checkedBrands);
  console.log();
  $.ajax({
  url: `/getfilters?filterType=${filterType}&material=${material}&category=${category_id}&brand=${checkedBrands}`,
  method: 'GET',
  success: function(data) {
  console.log('Response data:', data); // Add this line to log the data variable
  const products = data.products;
  const currentPage = data.pagination.currentPage;
  const totalPages = data.pagination.totalPages;
  const productsHtml = products.map(product => `
    <div class="col-lg-4 mb-4 text-center">
      <div class="product-entry border">
        <a href="/productdetails/${product._id}" class="prod-img">
          <img src="/products/${product.images[0]}" class="img-fluid" alt="Free html5 bootstrap 4 template">
        </a>
        <div class="desc">
          <h2><a href="#">${product.name}</a></h2>
          <span class="price">${product.price}</span>
        </div>
      </div>
    </div>
  `).join('');

  const paginationHtml = `
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
        <a class="page-link" href="#" aria-label="Previous" data-page="${currentPage - 1}">
          <span aria-hidden="true">&laquo;</span>
          <span class="sr-only">Previous</span>
        </a>
      </li>
      ${Array.from({ length: totalPages }, (_, i) => `
        <li class="page-item ${currentPage === i + 1 ? 'active' : ''}">
          <a class="page-link" href="#" data-page="${i + 1}">${i + 1}</a>
        </li>
      `).join('')}
      <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
        <a class="page-link" href="#" aria-label="Next" data-page="${currentPage + 1}">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Next</span>
        </a>
      </li>
    </ul>
  </nav>
`;
  
  $('#products-container').html(productsHtml);
  $('#pagination-container').html(paginationHtml);
  },


  error: function(xhr, status, error) {
    console.error('Error fetching products:', error);
  }
  });

});





