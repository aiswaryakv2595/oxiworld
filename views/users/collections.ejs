$('#price-filter-form input[type="button"]').click(function() {
    var min = $('#price-filter-form input[name="min"]').val();
    var max = $('#price-filter-form input[name="max"]').val();

    $.post('/products/filter/price', { min: min, max: max }, function(data) {
      // Update the products container with the filtered results
      
      var productsHtml = '';
      if (data.length > 0) {
        productsHtml = data.map(product => `
          <div class="col-lg-4 mb-4 text-center">
            <div class="product-entry border">
