<%-include('../layouts/user-header.ejs')-%>
<div class="sale bg-info">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 offset-sm-2 text-center">
                <div class="row">
                    
                    <div class="owl-carousel2">
                        <%if(coupon.length){%>
                        <%for(let i=0;i<coupon.length;i++){ %>
                        <div class="item ">
                            <div class="col mt-2">
                                <h6><a href="#" class="text-white text-uppercase"><%=coupon[i].name%>  <%=coupon[i].description%></a></h6>
                            </div>
                        </div>
                        
                        <%}}%>
                        
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
<aside id="colorlib-hero">
    <div class="flexslider">
        <ul class="slides">
            <% if(banners.length > 0){
                for(let i=0; i<banners.length;i++ ){%>
                    <% banners[i].bannerImage.forEach((row,element)=>{%>
           <li style="background-image: url('banners/<%=row%>');">
            <div class="overlay"></div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6 offset-sm-3 text-center slider-text">
                        <div class="slider-text-inner">
                            <div class="desc">
                               <%banners[i].content.heading.forEach((row,element)=>{%>
                                <h1 class="head-1"><%=row.head_1%> </h1>
                                <h2 class="head-2"><%=row.head_2%></h2>
                                <h2 class="head-3"><%=row.sub_head%></h2>
                                <p class="category"><span>New trending</span></p>
                                <p><a href="#" class="btn btn-primary">Shop Collection</a></p>
                                <%})%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           </li>
           
          
        <%})}}%>
          </ul>
      </div>
</aside>

<div class="colorlib-product">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
                <h2>shop by categories</h2>
            </div>
            <% categories.forEach((row,element)=>{%>
            <div class="col-sm-4 text-center">
                
                <div class="featured">
                    <a href="#" class="featured-img" style="background-image: url(/uploads/<%=row.images%>); background-size: contain;"></a>
                   <h3><a href="#"><%=row.name%> Collection</a></h3>
                   
                </div>
            </div>
            <%})%>
        </div>
    </div>
</div>

<div class="colorlib-product">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
                <h2>Best Sellers</h2>
            </div>
        </div>
        <div class="row row-pb-md">
            <% items.forEach((row,element)=>{%>
            <div class="col-lg-3 mb-4 text-center">
                <div class="product-entry border">
                    <a href="/productdetails/<%=row._id%>" class="prod-img">
                        <img src="/products/<%=row.images[0]%>" class="img-fluid" alt="Free html5 bootstrap 4 template">
                    </a>
                    <div class="desc">
                        <h2><a href="#"><%=row.name%></a></h2>
                        <span class="price"><%=row.price%></span>
                    </div>
                </div>
            </div>
            <%})%>
           
            <div class="w-100"></div>
           
            
           
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <p><a href="#" class="btn btn-primary btn-lg">Shop All Products</a></p>
            </div>
        </div>
    </div>
</div>


<%-include("../layouts/user-footer.ejs")-%>